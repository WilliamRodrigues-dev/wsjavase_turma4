package br.com.universidade.modelo;

public class Aluno {

	private String nome;
	private int numeroMatricula;
	private String email;
	
	// montem os metodos preencherNumeroMatricula() e exibirNumeroMatricula
	// monte os metodos preencherEmail() e exibirEmail()
	
	
	//Sintaxe para montar um método no JAVA
	// <modificador> <retorno> nomeMetodo(<tipoParametro> <nomeParametro>){}
	
	public void preencherNome(String pNome) {
		if (pNome.length()<=50) {
			nome = pNome.toUpperCase();
		}
	}
	
	public String exibirNome() {
		return nome;
	}
	
	
}
